private: System::Void numberButtonClick(System::Object^  sender, System::EventArgs^  e){
			 if(textBox1Mode){
				textBox1->Clear();
				textBox1Mode = false;
			 }
			 textBox1->Text += static_cast<System::Windows::Forms::Button^>(sender)->Text;
		 }

private: System::Void button17_Click(System::Object^  sender, System::EventArgs^  e) {
			 textBox1->Text = "0";
			 textBox1Mode = true;
		 }
private: System::Void button11_Click(System::Object^  sender, System::EventArgs^  e) {
			 ch = '+';
			 String^ str1 = textBox1->Text;
			 numb1 = Convert::ToDouble(str1);
			 textBox1->Text = "0";
			 textBox1Mode = true;
		 }
private: System::Void button12_Click(System::Object^  sender, System::EventArgs^  e) {
			 // ch = '-';
			 if(textBox1Mode)
			 {
				 textBox1->Clear();
				 textBox1->Text += "-";
				 textBox1Mode = false;
			 }
			 else{
				ch = '-';
				this->getNumb();
			 }
		 }
private: System::Void button13_Click(System::Object^  sender, System::EventArgs^  e) {
			 ch = '*';
			 this->getNumb();
		 }
private: System::Void button14_Click(System::Object^  sender, System::EventArgs^  e) {
			 ch = '/';
			 this->getNumb();
		 }
private: System::Void getNumb()
		{
			 String^ str1 = textBox1->Text;
			 numb1 = Convert::ToDouble(str1);
			 textBox1->Text = "0";
			 textBox1Mode = true;
		}
private: System::Void button15_Click(System::Object^  sender, System::EventArgs^  e) {
			 textBox1Mode = true;
			 String^ str1 = textBox1->Text;
			 double numb2 = Convert::ToDouble(str1);
			 switch(ch)
			 {
			 case '+':
				 numb1+=numb2;
				 break;
			 case '-':
				 numb1-=numb2;
				 break;
			 case '*':
				 numb1*=numb2;
				 break;
			 case '/':
				if(numb2==0)
				{
					textBox1->Text = "Ошибка. Деление на 0";
					return;
				}
				numb1/=numb2;
				break;
			 case 'p':
				 if(numb1<0)
				 {
					 if(numb2-int(numb2)!=0) //вещественная степень из отриц числа
					 {
						 textBox1->Text = "Ошибка. Неверная оп. степени";
						 return;
					 }
					 /*else
					 {
						 if(int(numb2)%2==0)
						 {
							textBox1->Text = "Ошибка. Неверная оп. степени";
							return;
						 }
					 }
					 textBox1->Text = "Ошибка. Неверная оп. степени";
					 return;*/
				 }
				 numb1 = pow(numb1, numb2);
				 break;
			 default:
				 textBox1->Text = "Неизвестная операция";
				 break;
			 }
			 textBox1->Text = Convert::ToString(numb1);
		 }

//SIN
private: System::Void button18_Click(System::Object^  sender, System::EventArgs^  e) {
			 textBox1Mode = true;
			 this->getNumb();
			 double res = sin(numb1);
			 textBox1->Text = Convert::ToString(res);
		 }
//COS
private: System::Void button19_Click(System::Object^  sender, System::EventArgs^  e) {
			 textBox1Mode = true;
			 this->getNumb();
			 double res = cos(numb1);
			 textBox1->Text = Convert::ToString(res);
		 }
//TG
private: System::Void button20_Click(System::Object^  sender, System::EventArgs^  e) {
			 textBox1Mode = true;
			 this->getNumb();
			 double res = tan(numb1);
			 textBox1->Text = Convert::ToString(res);
		 }
//LOG
private: System::Void button21_Click(System::Object^  sender, System::EventArgs^  e) {
			 textBox1Mode = true;
			 this->getNumb();
			 if(numb1<=0)
			 {
				 textBox1->Text = "Ошибка. Log из -";
				 return;
			 }
			 double res = log(numb1);
			 textBox1->Text = Convert::ToString(res);
		 }
//SQRT
private: System::Void button22_Click(System::Object^  sender, System::EventArgs^  e) {
			 textBox1Mode = true;
			 this->getNumb();
			 if(numb1<0)
			 {
				 textBox1->Text = "Ошибка. Корень из -";
				 return;
			 }
			 double res = sqrt(numb1);
			 textBox1->Text = Convert::ToString(res);
		 }
//POW
private: System::Void button23_Click(System::Object^  sender, System::EventArgs^  e) {
			 ch = 'p';
			 this->getNumb();
		 }
